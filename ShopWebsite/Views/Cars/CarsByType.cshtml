@model ShopWebsite.ViewModels.PagingViewModel

@{
    ViewData["Title"] = "Index";
}

@if (Model != null)
{
    <h2>Type: @Model.Cars.First().CarType.Name</h2>
}

<div class="row text-center">
    @foreach (var item in Model.Cars)
    {
        <div class="col-4">
            <img src="~/static/cars/@item.Image" class="img-fluid img-thumbnail" alt="" />
            <div>
                @Html.Raw(item.Description)
            </div>
            <p>
                @item.Price.ToString("C2")
            </p>
            <p>
                <a href="#" class="btn btn-primary">Add to cart</a>
            </p>
        </div>
    }
</div>
<ul class="nav text-center">
    <li class="nav-item">
        <a type="button" class="btn-sm btn-light
                       @(Model.PagingHelper.CurrentPage > 1 ? "" : "disabled") nav-link"
           asp-controller="Cars" asp-action="CarsByType" asp-route-page="1">First</a>
    </li>
    @for (int i = 1; i <= Model.PagingHelper.TotalPages; i++)
    {
        <li class="nav-item">
            <a type="button"
               class="btn-sm btn-light nav-link @(i == Model.PagingHelper.CurrentPage ?
                        "active" : "")"
               asp-controller="Cars" asp-action="CarsByType" asp-route-page="@i">
                @i
            </a>
        </li>
    }
    <li class="nav-item">
        <a type="button"
           class="btn-sm btn-light nav-link
                       @(Model.PagingHelper.CurrentPage != Model.PagingHelper.TotalPages ?
                        "" : "disabled")"
           asp-controller="Cars" asp-action="CarsByType" asp-route-page="@Model.PagingHelper.TotalPages">
            Last
        </a>
    </li>
</ul>